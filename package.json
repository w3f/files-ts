{
  "name": "@w3f/files",
  "version": "0.1.3",
  "description": "File management",
  "repository": "git@github.com:w3f/files-ts.git",
  "author": "W3F Infrastructure Team <devops@web3.foundation>",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx",
    "build": "tsc --build tsconfig.json",
    "prepare": "yarn build",
    "pretest": "yarn lint",
    "test": "mocha --timeout 60000 --require ts-node/register --exit test/*.ts test/**/*.ts",
    "e2e-test": "mocha --timeout 300000 --require ts-node/register --exit e2e-test/**/*.ts",
    "start": "node ./dist/index.js start"
  },
  "dependencies": {
    "fs-extra": "^9.0.0",
    "js-yaml": "^3.13.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/fs-extra": "^8.1.0",
    "@types/js-yaml": "^3.12.2",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.11.1",
    "@types/tmp": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "mocha": "^7.0.0",
    "tmp": "^0.1.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  }
}
